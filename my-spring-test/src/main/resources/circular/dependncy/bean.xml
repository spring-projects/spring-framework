<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       ">

	<!--    <bean id="a" class="com.qf.spring.pojo.A" abstract="false" depends-on="b">-->
	<bean id="instanceA" class="org.springframework.ioc.circular.dependency.model.InstanceA">
		        <property name="instanceB" ref="instanceB"></property>
	</bean>

	<bean id="instanceB" class="org.springframework.ioc.circular.dependency.model.InstanceB">
		<property name="instanceA" ref="instanceA"></property>
	</bean>
</beans>